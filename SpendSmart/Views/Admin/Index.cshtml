@{
    ViewData["Title"] = "Admin - Users";
    var username = ViewData["UserId"];
    var email = ViewBag.Email;
}

@model List<SpendSmart.Models.User>

<div class="container-fluid py-4">
    <div class="card">
        <div class="card-header">
            <div class="d-lg-flex">
                <div>
                    <h5 class="mb-0">All Users</h5>
                    <p class="text-sm mb-0">List of all registered users.</p>
                </div>
                <div class="ms-auto my-auto mt-lg-0 mt-4">
                    <a class="btn btn-primary btn-sm mb-0" data-bs-toggle="modal"
                       data-bs-target="#userModal" data-userid="@username">+&nbsp; New User</a>
                </div>
            </div>
        </div>

        <div class="table-responsive">
            <table id="datatable-users" class="table dataTable-table m-0">
                <thead>
                    <tr>
                        <th class="text-center">Id</th>
                        <th class="text-center">Username</th>
                        <th class="text-center">Email</th>
                        <th class="text-center">Password</th>
                        <th class="text-center">User Role</th>
                        <th class="text-center">Date Updated</th>
                        <th class="text-center">Date Created</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td class="text-center">@user.Id</td>
                            <td class="text-center">@user.Username</td>
                            <td class="text-center">@user.Email</td>
                            <td class="text-center">@user.Password</td>
                            <td class="text-center">@user.userrole</td>
                            <td class="text-center">@user.DateUpdated.ToString("yyyy-MM-dd")</td>
                            <td class="text-center">@user.DateCreated.ToString("yyyy-MM-dd HH:mm:ss")</td>
                            <td class="text-center">
                                <a class="btn btn-link text-primary px-3 mb-0" data-bs-toggle="modal"
                                   data-bs-target="#userModal"
                                   data-id="@user.Id"
                                   data-username="@user.Username"
                                   data-email="@user.Email"
                                   data-password="@user.Password"
                                   data-userrole="@user.userrole"
                                   data-dateup="@user.DateUpdated.ToString("yyyy-MM-dd")"
                                   data-created="@user.DateCreated.ToString("yyyy-MM-ddTHH:mm")"
                                   data-type="View">
                                    <i class="fas fa-eye text-primary me-2"></i>View
                                </a>
                                <a class="btn btn-link text-success px-3 mb-0" data-bs-toggle="modal"
                                   data-bs-target="#userModal"
                                   data-id="@user.Id"
                                   data-username="@user.Username"
                                   data-email="@user.Email"
                                   data-password="@user.Password"
                                   data-userrole="@user.userrole"
                                   data-dateup="@user.DateUpdated.ToString("yyyy-MM-dd")"
                                   data-created="@user.DateCreated.ToString("yyyy-MM-ddTHH:mm")"
                                   data-type="Edit">
                                    <i class="fas fa-pencil-alt text-success me-2"></i>Edit
                                </a>
                                <a class="btn btn-link text-danger text-gradient px-3 mb-0"
                                   data-id="@user.Id"
                                   data-bs-toggle="modal"
                                   data-bs-target="#deleteConfirmationModal">
                                    <i class="far fa-trash-alt me-2"></i>Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Delete Modal -->
<div class="modal fade" id="deleteConfirmationModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-sm">
        <form asp-action="DeleteUser" asp-controller="Admin" method="post">
            <input type="hidden" id="modal-del-id" name="id" />
            <div class="modal-content">
                <div class="modal-header text-white">
                    <h1 class="modal-title fs-5">Confirm Deletion</h1>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body text-center">
                    <p>Are you sure you want to delete this user?</p>
                    <p class="text-danger fw-bold">This action cannot be undone.</p>
                </div>
                <div class="d-flex justify-content-lg-evenly mb-3">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger" id="confirmDeleteBtn">Delete</button>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- User Modal -->
<div class="modal fade" id="userModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <form asp-action="CreateEditUserForm" asp-controller="Admin" method="post" class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5">Edit User</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="modal-id" name="Id" />

                <div class="mb-3">
                    <label for="modal-username" class="form-label">Username</label>
                    <input type="text" class="form-control" id="modal-username" name="Username" required />
                </div>

                <div class="mb-3">
                    <label for="modal-email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="modal-email" name="Email" required />
                </div>

                <div class="mb-3">
                    <label for="modal-password" class="form-label">Password</label>
                    <input type="text" class="form-control" id="modal-password" name="Password" required />
                </div>

                <div class="mb-3">
                    <label for="modal-userrole" class="form-label">User Role</label>
                    <input type="text" class="form-control" id="modal-userrole" name="UserRole" required />
                </div>

                <div class="mb-3">
                    <label for="modal-dateup" class="form-label">Date Updated</label>
                    <input type="date" class="form-control" id="modal-dateup" name="DateUpdated" />
                </div>

                <div class="mb-3">
                    <label for="modal-created" class="form-label">Date Created</label>
                    <input type="datetime-local" class="form-control" id="modal-created" name="DateCreated" />
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary" id="ModalType">Save changes</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const table = new simpleDatatables.DataTable("#datatable-users", {
                searchable: true,
                paging: true,
                perPageSelect: [5, 10, 25, 50],
                perPage: 5
            });

            const deleteModal = document.getElementById('deleteConfirmationModal');
            deleteModal.addEventListener('show.bs.modal', function (event) {
                const button = event.relatedTarget;
                const id = button.getAttribute('data-id');
                document.getElementById('modal-del-id').value = id;
            });

            const userModal = document.getElementById('userModal');
            userModal.addEventListener('show.bs.modal', function (event) {
                const button = event.relatedTarget;
                const type = button.getAttribute('data-type');

                document.getElementById("ModalType").innerText = type === "Edit" ? "Update" : "Save";
                document.getElementById("ModalType").style.display = type === "View" ? "none" : "block";

                document.getElementById('modal-id').value = button.getAttribute('data-id') || '';
                document.getElementById('modal-username').value = button.getAttribute('data-username') || '';
                document.getElementById('modal-email').value = button.getAttribute('data-email') || '';
                document.getElementById('modal-password').value = button.getAttribute('data-password') || '';
                document.getElementById('modal-userrole').value = button.getAttribute('data-userrole') || '';
                document.getElementById('modal-dateup').value = button.getAttribute('data-dateup') || '';
                document.getElementById('modal-created').value = button.getAttribute('data-created') || '';
            });
        });
    </script>
}
