@{
    ViewData["Title"] = "Create / Edit";
    var username = ViewData["UserId"];
    var email = ViewBag.Email;
    Layout = null;
}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link rel="stylesheet" href="~/SpendSmart.styles.css" asp-append-version="true" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

@model SpendSmart.Models.Expense

<!-- Button to trigger modal -->
@* <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#expenseModal">
    Create / Edit Expense
</button> *@

<!-- Modal -->
<div class="modal fade modal-dialog modal-fullscreen-sm-down" id="expenseModal" tabindex="-1" aria-labelledby="expenseModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title" id="expenseModalLabel">Create or Edit an Expense</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <form asp-action="CreateEditExpenseForm" asp-controller="Home">
                <div class="modal-body">
                    <input hidden class="form-control" type="number" asp-for="Id" />

                    <label class="mt-2">Value</label>
                    <input class="form-control" type="number" asp-for="Value" placeholder="0" step="0.01" />

                    <label class="mt-3">Description</label>
                    <input class="form-control" type="text" asp-for="Description" placeholder="Add a description" />

                    <label class="mt-3">Date From</label>
                    <input class="form-control" type="date" asp-for="Datefrom" />

                    <label class="mt-3">Date To</label>
                    <input class="form-control" type="date" asp-for="Dateto" />

                    <input type="hidden" asp-for="UserId" value="@ViewBag.UserId" />
                </div>

                <div class="modal-footer">
                     <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Close</a>
                    <button type="submit" class="btn btn-primary">OK</button>
                </div>
            </form>

        </div>
    </div>
</div>


<script>
    window.addEventListener('DOMContentLoaded', (event) => {
        var myModal = new bootstrap.Modal(document.getElementById('expenseModal'));
        myModal.show();
    });
</script>

