@{
    ViewData["Title"] = "Create / Edit";
    var username = ViewData["UserId"];
    var email = ViewBag.Email;
}

@model SpendSmart.Models.Budget

<div class="text-center">
    <h1 class="display-4">Create or Edit an Budget</h1>

</div>
<form asp-action="CreateEditBudgetForm" asp-asp-controller="Home">
    <label hidden>Id</label>
    <input hidden class="form-control" type="number" placeholder="0" asp-for="Id" />

    <label class="mt-4">Value</label>
    <input class="form-control" type="number" placeholder="0" asp-for="Value" step="0.01" />

    <label class="mt-4">Description</label>
    <input class="form-control" type="text" placeholder="Add a description" asp-for="Description" />

    <label class="mt-4">Date From</label>
    <input class="form-control" type="date" placeholder="Date From" asp-for="Datefrom" />

    <label class="mt-4">Date To</label>
    <input class="form-control" type="date" placeholder="Date to" asp-for="Dateto" />

    <input type="hidden" name="UserId" asp-for="UserId" value="@ViewData["UserId"]" />

    <button class="btn btn-primary mt-4" type="submit">OK</button>
</form>
