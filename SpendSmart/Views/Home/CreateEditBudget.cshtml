@{
    ViewData["Title"] = "Create / Edit";
    var username = ViewData["UserId"];
    var email = ViewBag.Email;
    Layout = null;
}

@model SpendSmart.Models.Budget

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link rel="stylesheet" href="~/SpendSmart.styles.css" asp-append-version="true" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<!-- Button to trigger modal -->
@* <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#budgetModal">
    Create / Edit Budget
</button> *@

<!-- Modal -->
<div class="modal fade" id="budgetModal" tabindex="-1" aria-labelledby="budgetModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title" id="budgetModalLabel">Create or Edit a Budget</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">
                <form asp-action="CreateEditBudgetForm" asp-controller="Home">
                    <input hidden class="form-control" type="number" asp-for="Id" />

                    <label class="mt-2">Value</label>
                    <input class="form-control" type="number" asp-for="Value" step="0.01" placeholder="0" />

                    <label class="mt-3">Description</label>
                    <input class="form-control" type="text" asp-for="Description" placeholder="Add a description" />

                    <label class="mt-3">Date From</label>
                    <input class="form-control" type="date" asp-for="Datefrom" />

                    <label class="mt-3">Date To</label>
                    <input class="form-control" type="date" asp-for="Dateto" />

                    <input type="hidden" asp-for="UserId" value="@ViewData["UserId"]" />
                </form>
            </div>

            <div class="modal-footer">
                <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Close</a>
                <button type="submit" formmethod="post" formaction="/Home/CreateEditBudgetForm" class="btn btn-primary">OK</button>
            </div>

        </div>
    </div>
</div>

<script>
    window.addEventListener('DOMContentLoaded', (event) => {
        var myModal = new bootstrap.Modal(document.getElementById('budgetModal'));
        myModal.show();
    });
</script>

